@model Compelover.Entities.DTOs.BlogDto
@{
    Layout = "_MemberLayout";
}
<section id="blogDetailPage" class="py-4">
    <div class="container">
        <div class="row">
            <div class="col-md-9 offset-2">
                <div class="title-area">
                    <h3 style="font-family: 'Playfair Display', serif;color: #fefefe;">@Model.Title</h3>
                </div>
                <div class="short-description-area">
                    <h5 style="font-family: 'Open Sans Condensed', sans-serif;color: #f5c6cb;">@Model.ShortDescription</h5>
                </div>
                <div class="date mb-2">
                    <i class="far fa-clock text-white">
                        <small style="font-family: 'Dubai Medium',serif">@Model.PostedTime.ToLongDateString()</small>
                        <a asp-route-userId="@Model.AppUserId" asp-controller="Member" asp-action="BlogUser" style="text-decoration: none;color: #fefefe;">
                            <small class="bg-turquoise pr-4">@Model.AppUserId</small>
                        </a>
                    </i>
                    <small style="margin-left:40%;">
                        <a class="twitter-share-button mr-1" title="Twitter'da Paylaş" data-lang="tr" data-via="www.compelover.com" href="https://twitter.com/intent/tweet?text=@Model.Title by @@@Model.AppUserId www.compelover.com" _fcksavedurl="https://twitter.com/intent/tweet?text=Paylas" data-size="large">
                            <i class="fab fa-twitter text-info text-white"></i>
                        </a>
                        <a class="facebook-share-button" title="Facebook'ta Paylaş" href="http://www.facebook.com/sharer/sharer.php?s=100&p[url]=&p[images][0]=&p[title]=&p[summary]=" onclick_fckprotectedatt="%20onclick%3D%22%0A%0A%20%20%20%20window.open(%0A%0A%20%20%20%20%20%20'https%3A%2F%2Fwww.facebook.com%2Fsharer%2Fsharer.php%3Fu%3D'%2BencodeURIComponent(location.href)%2C%20%0A%0A%20%20%20%20%20%20'facebook-share-dialog'%2C%20%0A%0A%20%20%20%20%20%20'width%3D626%2Cheight%3D436')%3B%20%0A%0A%20%20%20%20return%20false%3B%22">
                            <i class="fab fa-facebook-f text-info"></i>
                        </a>
                    </small>
                </div>

                <div class="blog-photo">
                    <img src="@Model.ImageBlog" class="img-fluid" alt="" style="border-radius: 5%;">
                </div>
                <div class="description text-white">
                    <p style="font-family: 'Source Serif Pro', serif;font-size: 1.27rem;">@Model.Description</p>


                </div>

            </div>
        </div>
    </div>


</section>